{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", "group:allNonMajor", ":semanticCommits"],
	"timezone": "Asia/Kuala_Lumpur",
	"schedule": ["before 12pm on Sunday"],
	"labels": ["dependencies"],
	"reviewers": ["yuansheng1549"],
	"prHourlyLimit": 0,
	"npm": {
		"postUpdateOptions": ["yarnDedupeHighest"],
		"rangeStrategy": "bump",
		"packageRules": [
			{
				"matchUpdateTypes": ["patch"],
				"matchCurrentVersion": "/^0\\./",
				"automerge": true,
				"platformAutomerge": true
			},
			{
				"matchUpdateTypes": ["minor", "patch"],
				"matchCurrentVersion": ">=1.0.0",
				"automerge": true,
				"platformAutomerge": true
			},
			{
				"matchPackagePatterns": ["mongoose"],
				"allowedVersions": "^6"
			},
			{
				"matchPackageNames": ["typescript"],
				"allowedVersions": "<=5.4"
			},
			{
				"matchPackageNames": ["eslint"],
				"matchSourceUrls": ["https://github.com/typescript-eslint/typescript-eslint"],
				"allowedVersions": "^8"
			},
			{
				"matchPackagePatterns": ["@types/node"],
				"allowedVersions": "20.16.3",
				"automerge": true,
				"automergeStrategy": "rebase"
			}
		]
	}
}
