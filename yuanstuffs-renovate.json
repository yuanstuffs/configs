{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		"group:allNonMajor"
	],
	"timezone": "Asia/Kuala_Lumpur",
	"rebaseWhen": "conflicted",
	"schedule": [
		"before 12pm on Sunday"
	],
	"labels": [
		"Meta: Dependencies"
	],
	"semanticCommits": "enabled",
	"lockFileMaintenance": {
		"automerge": true,
		"enabled": true,
		"recreateClosed": true,
		"rebaseStalePrs": true,
		"schedule": [
			"before 12pm on Sunday"
		],
		"platformAutomerge": true
	},
	"prCreation": "immediate",
	"prHourlyLimit": 0,
	"github-actions": {
		"enabled": false
	},
	"npm": {
		"postUpdateOptions": ["yarnDedupeHighest"],
		"rangeStrategy": "bump",
		"packageRules": [
			{
				"matchUpdateTypes": ["patch"],
				"matchCurrentVersion": "/^0\\./",
				"automerge": true,
				"platformAutomerge": true
			},
			{
				"matchUpdateTypes": ["minor", "patch"],
				"matchCurrentVersion": ">=1.0.0",
				"automerge": true,
				"platformAutomerge": true
			},
			{
				"matchPackagePatterns": [
					"mongoose"
				],
				"allowedVersions": "^6"
			},
			{
				"matchPackagePatterns": [
					"bullmq"
				],
				"allowedVersions": "^3"
			},
			{
				"matchPackagePatterns": [
					"@sapphire"
				],
				"groupName": "Sapphire Dependencies"
			},
			{
				"matchDepTypes": [
					"engines"
				],
				"enabled": false
			},
			{
				"matchPackagePatterns": [
					"@types/node"
				],
				"allowedVersions": "18.14.2",
				"automerge": true,
				"automergeStrategy": "squash"
			}
		]
	}
}
