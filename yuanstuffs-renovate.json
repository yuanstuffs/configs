{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base", "group:allNonMajor"],
    "timezone": "Asia/Kuala_Lumpur",
    "rebaseWhen": "conflicted",
    "schedule": [
        "before 12pm on Sunday"
    ],
    "labels": ["Meta: Dependencies"],
    "semanticCommits": "enabled",
    "github-actions": {
 		"enabled": false
    },
    "npm": {
		"rangeStrategy": "bump",
		"packageRules": [
			{
				"matchUpdateTypes": ["patch"],
				"matchCurrentVersion": "/^0\\./",
				"automerge": true
			},
			{
				"matchUpdateTypes": ["minor", "patch"],
				"matchCurrentVersion": ">=1.0.0",
				"automerge": true,
				"automergeStrategy": "squash"
			},
			{
				"matchPackagePatterns": ["mongoose"],
				"matchCurrentVersion": "/^6\\./"
			},
			{
				"matchPackagePatterns": ["ansi-regex"],
				"allowedVersions": "^5",
				"automerge": true
			},
			{
				"matchPackagePatterns": ["@types/node-fetch"],
				"allowedVersions": "^2",
				"automerge": true
			},
			{
				"matchPackagePatterns": ["@sapphire"],
				"groupName": "Sapphire Dependencies"
			},
			{
				"matchDepTypes": ["engines"],
				"enabled": false
			},
			{
				"matchPackagePatterns": ["@types/node"],
				"allowedVersions": "18.14.2",
				"automerge": true,
				"automergeStrategy": "squash"
			}
		]
	}
}