{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base", ":disableRateLimiting", "helpers:pinGitHubActionDigests", "group:allNonMajor"],
    "additionalReviewers": ["@yuansheng1549", "@yuansheng231"],
    "timezone": "Asia/Kuala_Lumpur",
    "rebaseWhen": "conflicted",
    "automergeStrategy": "squash",
    "automergeSchedule": [
        "before 10pm on Sunday",
		"at any time"
    ],
	"automerge": true,
    "schedule": [
        "before 12pm on Sunday"
    ],
    "labels": ["Meta: Dependencies"],
    "npm": {
		"rangeStrategy": "bump",
		"packageRules": [
			{
				"matchUpdateTypes": ["minor", "patch"],
				"matchCurrentVersion": "!/^0/",
				"automerge": true,
                "additionalReviewers": ["@yuansheng1549", "@yuansheng231"]
			},
			{
				"matchPackagePatterns": ["ansi-regex"],
				"allowedVersions": "^5"
			},
			{
				"matchPackagePatterns": ["@types/node-fetch"],
				"allowedVersions": "^2"
			},
			{
				"matchPackagePatterns": ["@sapphire"],
				"groupName": "Sapphire Dependencies",
                "additionalReviewers": ["@yuansheng1549", "@yuansheng231"]
			},
			{
				"matchDepTypes": ["engines"],
				"enabled": false
			}
		]
	}
}