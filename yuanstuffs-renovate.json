{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base", "group:allNonMajor", "group:monorepos", ":automergeAll", ":semanticCommits"],
	"timezone": "Asia/Kuala_Lumpur",
	"rebaseWhen": "conflicted",
	"schedule": ["before 12pm on Sunday"],
	"labels": ["Meta: Dependencies"],
	"lockFileMaintenance": {
		"automerge": true,
		"enabled": false,
		"recreateClosed": true,
		"rebaseStalePrs": true,
		"schedule": [
			"before 12pm on Sunday"
		],
		"platformAutomerge": true
	},
	"automergeType": "pr",
	"prCreation": "immediate",
	"prHourlyLimit": 0,
	"github-actions": {
		"enabled": false
	},
	"npm": {
		"postUpdateOptions": ["yarnDedupeHighest"],
		"rangeStrategy": "bump",
		"packageRules": [
			{
				"matchUpdateTypes": ["patch"],
				"matchCurrentVersion": "/^0\\./",
				"automerge": true,
				"platformAutomerge": true
			},
			{
				"matchUpdateTypes": ["minor", "patch"],
				"matchCurrentVersion": ">=1.0.0",
				"automerge": true,
				"platformAutomerge": true
			},
			{
				"matchPackagePatterns": ["mongoose"],
				"allowedVersions": "^6"
			},
			{
				"matchPackagePatterns": ["@types/node"],
				"allowedVersions": "18.14.2",
				"automerge": true,
				"automergeStrategy": "squash"
			}
		]
	}
}
